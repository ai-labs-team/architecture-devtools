{
  "name": "Architecture DevTools",
  "version": "0.1",
  "description": "DevTools extension for debugging Architecture state and messages",
  "devtools_page": "devtools.html",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "css": [],
    "js": ["page.js"],
    "all_frames": true,
    "run_at": "document_idle"
  }],
  "permissions": [
    "tabs", 
    "http://*/*",
    "https://*/*"
  ],
  "manifest_version": 2
}